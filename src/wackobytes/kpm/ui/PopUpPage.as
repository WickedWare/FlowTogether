package com.kpm.ui{	import flash.display.MovieClip;	import flash.events.Event;	public class PopUpPage extends UIPage	{		public static var CREATE_CLASS : int = 0;		public static var CHANGE_PASSWORD : int = 1;				var type : int;				public function PopUpPage() 		{			super(UIConst.PopUpPage);		}				public function set Type(pType)		{				type = pType;		}		public override function showPage(e : Event = null)		{			UIGod.debug("PopupPage.showPage " + type);			super.showPage()			for(var i=0; i < 2; i++)				components["t"+i].visible = (i == type); 		}			}}
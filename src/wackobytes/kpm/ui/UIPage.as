package com.kpm.ui{	//import com.kpm.util	import com.kpm.util.Util;		import flash.display.MovieClip;	import flash.events.Event;	import flash.geom.Point;		public class UIPage extends MovieClip	{		public static var TEXTFIELD : int = 0;		public static var BUTTON : int = 2;		public static var PAGE : int = 3;				public var posPercent 		: Point;		public var container		: UIGod;		public var nameId 			: String;		public var inited			: Boolean = false;				public var page_mc			: MovieClip;		public var pPopupWindow_mc	: MovieClip		public var popUp			: Boolean = false;				public var components : Array;		public var functionList : Array;		public function UIPage(pClassName : String, pPage_mc : MovieClip = null, pX : Number = 0, pY : Number = 0)		{							nameId = pClassName;			posPercent = new Point(pX,pY);			page_mc = pPage_mc || this;			//If component is not the UIManager							components = new Array(10);			for(var i = 0; i < page_mc.numChildren; i++){ 			    components[page_mc.getChildAt(i).name] = page_mc.getChildAt(i); 			    trace("component " + page_mc.getChildAt(i).name);			}						Visible = false;					}   				public function showPage(e : Event = null)		{			setPosition();			Visible = true;						container.main_mc.addChild(this);		}				public function setPosition()		{			page_mc.x = posPercent.x*container.main_mc.width;			page_mc.y = posPercent.y*container.main_mc.height;						UIGod.debug(nameId + " setting position " + posPercent + ", " + container.main_mc.width + " " + container.main_mc.width);		}				public function set PopUp(pPopUp : Boolean)		{			if(pPopUp)			{				popUp = true;				posPercent.x = 0.5;				posPercent.y = 0.5;			}		}						public function set Visible (pV : Boolean)		{			page_mc.visible = pV;					}				public override function toString() : String		{			return ("[Page : " + nameId + " ]");		}	}}